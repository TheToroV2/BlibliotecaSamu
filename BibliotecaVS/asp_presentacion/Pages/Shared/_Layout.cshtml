<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - asp_presentacion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/asp_presentacion.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Biblioteca</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" asp-area="" asp-page="/Ventanas/Biblioteca/Biblioteca">Biblioteca</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Ventanas/Casas">Casas</a>
                        </li>
                    </ul>
                    <form class="d-flex ms-auto">
                        <input class="form-control me-2" type="search" placeholder="Search books or authors..." aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </header>
    <div class="jumbotron text-center bg-light py-5">
        <h1 class="display-4">Welcome to the Library!</h1>
        <p class="lead">Discover thousands of books, resources, and more. A world of knowledge awaits!</p>
        <a href="/Ventanas/Biblioteca/Biblioteca" class="btn btn-primary btn-lg">Explore Library</a>
    </div>
    <div id="bookCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="book1.jpg" class="d-block w-100" alt="Book 1">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Book Title 1</h5>
                    <p>Author 1</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="book2.jpg" class="d-block w-100" alt="Book 2">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Book Title 2</h5>
                    <p>Author 2</p>
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#bookCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bookCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="container my-5">
        <h2 class="text-center mb-4">Explore Categories</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card">
                    <img src="fiction.jpg" class="card-img-top" alt="Fiction">
                    <div class="card-body">
                        <h5 class="card-title">Fiction</h5>
                        <a href="#" class="btn btn-primary">Explore Fiction</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="science.jpg" class="card-img-top" alt="Science">
                    <div class="card-body">
                        <h5 class="card-title">Science</h5>
                        <a href="#" class="btn btn-primary">Explore Science</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="text-center my-4 bg-secondary text-white py-3">
        <blockquote class="blockquote">
            <p class="mb-0">"A reader lives a thousand lives before he dies."</p>
            <footer class="blockquote-footer text-white-50">George R.R. Martin</footer>
        </blockquote>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container text-center">
            &copy; 2024 - asp_presentacion - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>